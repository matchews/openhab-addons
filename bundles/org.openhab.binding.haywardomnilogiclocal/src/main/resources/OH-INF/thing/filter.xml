<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="haywardomnilogiclocal"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
    xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

    <thing-type id="filter" listed="false">
        <supported-bridge-type-refs>
            <bridge-type-ref id="bridge"/>
        </supported-bridge-type-refs>

        <label>Filter</label>
        <semantic-equipment-tag>WaterFilter</semantic-equipment-tag>
        <channels>
            <channel id="filterEnable" typeId="system.power"/>
            <channel id="filterState" typeId="filterState"/>
            <channel id="filterSpeed" typeId="filterSpeed"/>
            <channel id="filterValvePosition" typeId="filterValvePosition"/>
            <channel id="filterWhyFilterIsOn" typeId="filterWhyFilterIsOn"/>
            <channel id="filterFpOverride" typeId="filterFpOverride"/>
            <channel id="filterReportedSpeed" typeId="filterReportedSpeed"/>
            <channel id="filterPower" typeId="filterPower"/>
            <channel id="filterLastSpeed" typeId="filterLastSpeed"/>
        </channels>

        <representation-property>systemID</representation-property>
    </thing-type>

    <channel-type id="filterState">
        <item-type>String</item-type>
        <label>Filter State</label>
        <description>Filter State</description>
        <state readOnly="true">
            <options>
                <option value="0">Off</option>
                <option value="1">On</option>
                <option value="2">Priming</option>
                <option value="3">Waiting to Turn Off</option>
                <option value="4">Waiting to Turn Off Manual</option>
                <option value="5">Heater Extend</option>
                <option value="6">Cool Down Mode</option>
                <option value="7">Suspended</option>
                <option value="8">CSAD Extend</option>
                <option value="9">Filter Super Chlorinate</option>
                <option value="10">Filter Force Priming</option>
                <option value="11">Filter Waiting for Pump to Turn Off</option>
            </options>
        </state>
    </channel-type>
    
    <channel-type id="filterSpeed">
        <item-type unitHint="%">Number:Dimensionless</item-type>
        <label>Filter Speed</label>
        <description>Filter speed</description>
        <tags>
            <tag>Measurement</tag>
            <tag>Speed</tag>
        </tags>
        <state min="0" max="100" step="5" pattern="%d %%" readOnly="false"/>
    </channel-type>

    <channel-type id="filterValvePosition">
        <item-type>String</item-type>
        <label>Valve Position</label>
        <description>Valve Position</description>
        <state readOnly="true">
            <options>
                <option value="1">Pool Only</option>
                <option value="2">Spa Only</option>
                <option value="3">Spillover</option>
            </options>
        </state>
    </channel-type>

    <channel-type id="filterWhyFilterIsOn">
        <item-type>String</item-type>
        <label>Why Filter Is On</label>
        <description>Why Filter is On</description>
        <state readOnly="true">
            <options>
                <option value="0">Off</option>
                <option value="1">No Water Flow</option>
                <option value="2">Cool Down</option>
                <option value="3">PH Reduction Extend</option>
                <option value="4">Heater Extend</option>
                <option value="5">Paused</option>
                <option value="6">Valve Changing</option>
                <option value="7">Forced High Speed</option>
                <option value="8">Off for external interlock</option>
                <option value="9">Super Chlorinate</option>
                <option value="10">Count Down Timer</option>
                <option value="11">Manual On</option>
                <option value="12">Manual Spill Over</option>
                <option value="13">Timed Spill Over</option>
                <option value="14">Timed On</option>
                <option value="15">Freeze Protect</option>
            </options>
        </state>
    </channel-type>

    <channel-type id="filterFpOveride">
        <item-type>String</item-type>
        <label>fpOveride</label>
        <state readOnly="true"/>
    </channel-type>


    <channel-type id="filterLastSpeed">
        <item-type unitHint="%">Number:Dimensionless</item-type>
        <label>Last Speed</label>
        <state readOnly="true"/>
    </channel-type>

    <channel-type id="filterReportedSpeed">
        <item-type unitHint="%">Number:Dimensionless</item-type>
        <label>Reported Speed</label>
        <description>Reported speed</description>
        <tags>
            <tag>Measurement</tag>
            <tag>Speed</tag>
        </tags>
        <state min="0" max="100" step="5" pattern="%d %%" readOnly="false"/>
    </channel-type>
    
        <channel-type id="filterPower">
        <item-type>Number:Power</item-type>
        <label>Power</label>
        <description>Filter power</description>
        <tags>
            <tag>Measurement</tag>
            <tag>Power</tag>
        </tags>
    </channel-type>

</thing:thing-descriptions>
